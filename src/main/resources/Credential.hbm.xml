<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
    <class name="com.globalapps.security.Credential" table="usuario">
        <id name="id" type="int">
            <column name="id" />
        </id>
        <property name="passCode" type="java.lang.Integer">
            <column name="codigo_seguridad" />
        </property>
        <property name="email" type="java.lang.String">
            <column name="email" />
        </property>
        <property name="status" type="java.lang.String">
            <column name="estado" />
        </property>
        <property name="avatar" type="byte[]">
            <column name="avatar" />
        </property>
    </class>
</hibernate-mapping>
